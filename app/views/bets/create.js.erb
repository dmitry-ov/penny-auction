$('p.end_time').html('<%= j resource.lot.expire_date.to_s %>');
$('p.price').html('<%= j resource.lot.price.to_s %>');

<% publish_to '/lots/update' do %>
  $('#lot_'+ <%= resource.lot.id %> + ' .end_time').html('<%= j resource.lot.expire_date.to_s %>') // время
  $('#lot_'+ <%= resource.lot.id %> + ' .price').html('<%= j resource.lot.price.to_s %>') // цена

<% end %>


$('p.alert').html('<%= j resource.errors.first.to_s unless resource.errors.empty?%>');
